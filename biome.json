{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"files": {
		"ignore": [
			"node_modules",
			"dist",
			"build",
			"public",
			"out",
			"build-output",
			".wrangler",
			".next",
			".venv"
		],
		"ignoreUnknown": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "error"
			},
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	}
}
